{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",
        "types": [
            "node", 
            "@wdio/globals/types", 
            "expect-webdriverio",
            "@wdio/mocha-framework" 
        ],
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["test/**/*.ts", "wdio.conf.ts"]
}